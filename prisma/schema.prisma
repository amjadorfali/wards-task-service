generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  teams          Team[]
  phoneNumber    String?
  email          String          @unique
  Incident       Incident[]
  userIdentities UserIdentitiy[]

  @@map("user")
}

